# Test Environment Configuration

# Application
NODE_ENV=test
APP_PORT=3001
APP_NAME=Firefly III Clone API Test
APP_DEBUG=false

# Database (usar base de datos en memoria o de test)
DB_TYPE=sqlite
DB_DATABASE=:memory:
DB_SYNCHRONIZE=true
DB_LOGGING=false

# JWT
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# 2FA
TWO_FACTOR_SERVICE_NAME=Firefly III Clone Test
TWO_FACTOR_ISSUER=firefly-test

# Rate Limiting (m√°s permisivo para tests)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# Logging
LOG_LEVEL=error

# Frontend URL (para CORS en tests)
FRONTEND_URL=http://localhost:3000